generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  googleId      String?    @unique
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  challenges    Challenge[]
  progressLogs  ProgressLog[]
}

model Challenge {
  id          String       @id @default(cuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  reminderTime String      // Store as "HH:MM" format
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  progressLogs ProgressLog[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ProgressLog {
  id          String     @id @default(cuid())
  date        DateTime
  description String?
  mediaUrl    String?    // URL to stored media (image/video)
  challengeId String
  challenge   Challenge  @relation(fields: [challengeId], references: [id])
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
